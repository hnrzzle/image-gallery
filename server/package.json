  },
  "homepage": "https://github.com/hnrzzle/image-gallery#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "eslint": "^4.8.0",
    "mocha": "^4.0.0",
    "nodemon": "^1.17.5"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "dotenv": "^6.0.0",
